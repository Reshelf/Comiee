{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "public/js",
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["resources/js/**/*.ts", "resources/js/**/*.vue", "resources/js/types/**/*.ts"]
}
