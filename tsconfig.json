{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true, // Required for importing JSON files
    "outDir": "public/js",
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "types": ["vue", "node"]
  },
  "exclude": ["node_modules"],
  "include": ["vite.config.ts", "resources/js/**/*.ts", "resources/js/**/*.vue", "resources/js/**/*.d.ts", "resources/js/types/vite-plugin-auto-import.ts"]
}
